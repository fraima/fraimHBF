{
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "title": "Security groups API",
        "contact": {
            "name": "E",
            "url": "https://blog.bullgare.com/2020/07/complete-list-of-swagger-options-to-protobuf-file/"
        },
        "version": "1.0"
    },
    "host": "https://hbf.fraima.io",
    "paths": {
        "/v1/rules": {
            "post": {
                "tags": [
                    "SecGroupService"
                ],
                "summary": "find security rules scoped by security groups",
                "operationId": "SecGroupService_FindRules",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/sgroupsFindRulesReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response.",
                        "schema": {
                            "$ref": "#/definitions/sgroupsRulesResp"
                        }
                    },
                    "default": {
                        "description": "An unexpected error response.",
                        "schema": {
                            "$ref": "#/definitions/rpcStatus"
                        }
                    }
                }
            }
        },
        "/v1/sg-from/{sgFrom}/to/{sgTo}/rules": {
            "get": {
                "tags": [
                    "SecGroupService"
                ],
                "summary": "find security rules for direction SG --> SG",
                "operationId": "SecGroupService_GetRules",
                "parameters": [
                    {
                        "type": "string",
                        "name": "sgFrom",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "string",
                        "name": "sgTo",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response.",
                        "schema": {
                            "$ref": "#/definitions/sgroupsRulesResp"
                        }
                    },
                    "default": {
                        "description": "An unexpected error response.",
                        "schema": {
                            "$ref": "#/definitions/rpcStatus"
                        }
                    }
                }
            }
        },
        "/v1/sg/{sgName}/subnets": {
            "get": {
                "tags": [
                    "SecGroupService"
                ],
                "summary": "get subnet(s) for SG",
                "operationId": "SecGroupService_GetSgSubnets",
                "parameters": [
                    {
                        "type": "string",
                        "name": "sgName",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response.",
                        "schema": {
                            "$ref": "#/definitions/sgroupsGetSgSubnetsResp"
                        }
                    },
                    "default": {
                        "description": "An unexpected error response.",
                        "schema": {
                            "$ref": "#/definitions/rpcStatus"
                        }
                    }
                }
            }
        },
        "/v1/sync": {
            "post": {
                "tags": [
                    "SecGroupService"
                ],
                "summary": "synchronize security rules",
                "operationId": "SecGroupService_Sync",
                "parameters": [
                    {
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/sgroupsSyncReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response.",
                        "schema": {}
                    },
                    "default": {
                        "description": "An unexpected error response.",
                        "schema": {
                            "$ref": "#/definitions/rpcStatus"
                        }
                    }
                }
            }
        },
        "/v1/{address}/sg": {
            "get": {
                "tags": [
                    "SecGroupService"
                ],
                "summary": "get security group for address",
                "operationId": "SecGroupService_GetSecGroupForAddress",
                "parameters": [
                    {
                        "type": "string",
                        "description": "an IP or IP/subnet address",
                        "name": "address",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A successful response.",
                        "schema": {
                            "$ref": "#/definitions/sgroupsSecGroup"
                        }
                    },
                    "default": {
                        "description": "An unexpected error response.",
                        "schema": {
                            "$ref": "#/definitions/rpcStatus"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "NetIPPortRange": {
            "type": "object",
            "title": "IP net port range",
            "properties": {
                "from": {
                    "type": "integer",
                    "format": "int64"
                },
                "to": {
                    "type": "integer",
                    "format": "int64"
                }
            }
        },
        "NetIPTransport": {
            "type": "string",
            "title": "IP net transport",
            "default": "TCP",
            "enum": [
                "TCP",
                "UDP"
            ]
        },
        "NetworksNetIP": {
            "type": "object",
            "title": "IP network",
            "properties": {
                "CIDR": {
                    "type": "string",
                    "title": "IP net address range"
                }
            }
        },
        "SyncReqSyncOp": {
            "type": "string",
            "title": "- FullSync: full synchronize operation\n - Upsert: just Insert/Update passed items\n - Delete: just Delete passed items",
            "default": "FullSync",
            "enum": [
                "FullSync",
                "Upsert",
                "Delete"
            ]
        },
        "protobufAny": {
            "type": "object",
            "properties": {
                "@type": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "rpcStatus": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "details": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/protobufAny"
                    }
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "sgroupsFindRulesReq": {
            "type": "object",
            "properties": {
                "sgFrom": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "sgTo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "sgroupsGetSgSubnetsResp": {
            "type": "object",
            "properties": {
                "networks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsNetwork"
                    }
                }
            }
        },
        "sgroupsNetwork": {
            "type": "object",
            "title": "ip network",
            "properties": {
                "name": {
                    "type": "string"
                },
                "network": {
                    "$ref": "#/definitions/NetworksNetIP"
                }
            }
        },
        "sgroupsRule": {
            "type": "object",
            "title": "security group rule",
            "properties": {
                "portsFrom": {
                    "type": "array",
                    "title": "port range(s) from",
                    "items": {
                        "$ref": "#/definitions/NetIPPortRange"
                    }
                },
                "portsTo": {
                    "type": "array",
                    "title": "port range(s) to",
                    "items": {
                        "$ref": "#/definitions/NetIPPortRange"
                    }
                },
                "sgFrom": {
                    "title": "security group at client",
                    "$ref": "#/definitions/sgroupsSecGroup"
                },
                "sgTo": {
                    "title": "security group at server",
                    "$ref": "#/definitions/sgroupsSecGroup"
                },
                "transport": {
                    "title": "IP net transport",
                    "$ref": "#/definitions/NetIPTransport"
                }
            }
        },
        "sgroupsRulesResp": {
            "type": "object",
            "properties": {
                "rules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsRule"
                    }
                }
            }
        },
        "sgroupsSecGroup": {
            "type": "object",
            "title": "security group",
            "properties": {
                "name": {
                    "type": "string"
                },
                "networks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsNetwork"
                    }
                }
            }
        },
        "sgroupsSyncNetworks": {
            "type": "object",
            "title": "Synchronize networks",
            "properties": {
                "networks": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsNetwork"
                    }
                }
            }
        },
        "sgroupsSyncReq": {
            "type": "object",
            "title": "Synchronize data",
            "properties": {
                "groups": {
                    "$ref": "#/definitions/sgroupsSyncSecurityGroups"
                },
                "networks": {
                    "$ref": "#/definitions/sgroupsSyncNetworks"
                },
                "sgRules": {
                    "$ref": "#/definitions/sgroupsSyncSGRules"
                },
                "syncOp": {
                    "$ref": "#/definitions/SyncReqSyncOp"
                }
            }
        },
        "sgroupsSyncSGRules": {
            "type": "object",
            "title": "Synchronize security group Rules",
            "properties": {
                "rules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsRule"
                    }
                }
            }
        },
        "sgroupsSyncSecurityGroups": {
            "type": "object",
            "title": "Synchronize Security Groups",
            "properties": {
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/sgroupsSecGroup"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "SecGroupService"
        }
    ]
}